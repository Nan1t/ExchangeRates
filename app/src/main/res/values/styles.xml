<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextPrimary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Icon">
        <item name="tint">?attr/colorOnBackground</item>
    </style>

    <style name="TableText">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableText.Header">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TableText.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableText.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CurrencyText">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">?attr/backgroundColorVariant</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="ExchangerAbout">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="ExchangerAbout.Key">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>
    </style>
</resources>