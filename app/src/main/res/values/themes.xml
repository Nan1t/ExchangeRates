<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExchangeRates" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TableText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TableText.Header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TableText.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TableText.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CurrencyText">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/lighter</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@color/lighter</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableStart">@drawable/ic_baseline_search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>